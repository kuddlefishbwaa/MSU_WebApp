{
    "name": "Rails Development Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rebornix.ruby",
                "castwide.solargraph",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "forwardPorts": [
        3000
    ],
    "postCreateCommand": "bundle install && rails db:setup",
    "portsAttributes": {
        "3000": {
            "label": "Rails Server",
            "onAutoForward": "openBrowser"
        }
    }
}
